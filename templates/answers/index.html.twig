<!DOCTYPE html>

<title>Answers index</title>

{% block body %}
    <h1>Answers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Priority</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.question }}</td>
                <td>{{ answer.answer }}</td>
                <td>{{ answer.priority }}</td>
                <td>
                    <a href="{{ path('answers_show', {'id': answer.id}) }}">show</a>
                    <a href="{{ path('answers_edit', {'id': answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('answers_new') }}">Create new</a>
{% endblock %}
